readonly DEFAULT_SOURCE="$(pactl info | grep "Default Source" | awk '{print $3}')"

case $BLOCK_BUTTON in
	1|3) pactl set-source-mute $DEFAULT_SOURCE toggle > /dev/null ;;
esac


MUTED="$(pactl list sources | grep -A 15 "Name: $DEFAULT_SOURCE" | grep Mute | awk '{print $2}')"

RED='#FF0000'

case "$MUTED" in
    'yes')
      printf "%s\n" \
      	"OFF" \
	    "" \
	    "$RED"
      ;;
    'no')
      echo "ON"
      ;;
    *)
      echo "Unknown status :$MIC_STATUS:"
      ;;
esac
