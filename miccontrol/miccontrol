case $BLOCK_BUTTON in
	1|3) amixer set Capture toggle > /dev/null ;;
esac

RED='#FF0000'

MIC_STATUS="$( amixer get Capture | awk '/Front Left:/ {print $7; exit}' )"

case $MIC_STATUS in
    '[on]')
      echo "ON"
      ;;
    '[off]')
      printf "%s\n" \
      	"OFF" \
	"" \
	"$RED"
      ;;
    *)
      echo "Unknown status :$MIC_STATUS:"
      ;;
esac
